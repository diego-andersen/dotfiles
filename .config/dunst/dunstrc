[global]
    ### Display ###

    monitor = 0
    follow = keyboard

    # The geometry of the window:
    #   [{width}]x{height}[+/-{x}+/-{y}]
    # The height is measured in number of notifications everything else
    # in pixels.  If the width is omitted but the height is given
    # ("-geometry x2"), the message window expands over the whole screen
    # (dmenu-like).  If width is 0, the window expands to the longest
    # message displayed.  A positive x is measured from the left, a
    # negative from the right side of the screen.  Y is measured from
    # the top and down respectively.
    # The width can be negative.  In this case the actual width is the
    # screen width minus the width defined in within the geometry option.
    geometry = "300x3-4-35"
    transparency = 15
    notification_height = 30
    padding = 10
    horizontal_padding = 10
    frame_width = 2
    frame_color = "#d8dee9"
    separator_height = 2
    separator_color = frame

    indicate_hidden = yes
    shrink = no
    sort = yes
    idle_threshold = 120

    ### Text ###

    font = Noto Sans Display 10
    line_height = 0
    markup = full
    format = "<b>%s</b>\n%b"
    alignment = left
    word_wrap = no
    ignore_newline = no
    ellipsize = end

    show_age_threshold = 60
    stack_duplicates = true
    hide_duplicate_count = false
    show_indicators = no

    ### Icons ###

    icon_position = left
    max_icon_size = 48
    icon_path = "/usr/share/icons/Papirus/48x48/apps/:/usr/share/icons/Papirus/48x48/status/:/usr/share/icons/Papirus/48x48/devices/"

    ### History ###

    sticky_history = yes
    history_length = 20

    ### Misc/Advanced ###

    dmenu = /usr/bin/rofi -dmenu -p dunst:
    browser = /usr/bin/vivaldi-stable
    always_run_script = true
    title = Dunst
    class = Dunst
    startup_notification = false

[shortcuts]
    close = ctrl+space
    close_all = ctrl+shift+space
    history = ctrl+grave
    context = ctrl+shift+period

### EXPERIMENTAL ###

[experimental]
    per_monitor_dpi = false

### RULES ###

[urgency_low]
    background = "#4c566a"
    foreground = "#999999"
    timeout = 3
    #icon = /path/to/icon

[urgency_normal]
    background = "#4c566a"
    foreground = "#eceff4"
    timeout = 3
    #icon = /path/to/icon

[urgency_critical]
    background = "#bf616a"
    foreground = "#eceff4"
    timeout = 0
    #icon = /path/to/icon

# Ignore history for volume/brightness changes
[brightness_change]
    appname = brightness
    history_ignore = yes
    timeout = 1

[volume_change]
    appname = volume
    history_ignore = yes
    timeout = 1
