* {
    font:               "SF Pro Display Light 20";
    padding:            5px 10px;
    color:              #eceff4;
    background-color:   transparent;
}

#window {
    anchor:             center;
    background-color:   #434c5ef2;
    border-radius:      8px;
    transparency:       "real";
    width:              50ch;
}

#listview {
    columns:            1;
    dynamic:            false;
    fixed-height:       true;
    lines:              5;
    padding:            10px;
    scrollbar:          true;
    scrollbar-width:    4px;
    spacing:            0.5em;
}

#scrollbar {
    background-color:   #4c566a;
    border:             0px;
    handle-color:       #81a1c1;
    handle-width:       4px;
    margin:             0px;
    padding:            0px;
}

#element selected {
    background-color:   #81a1c1;
    text-color:         #eceff4;
    border-radius:      4px;
}
