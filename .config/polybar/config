menu-0-0 = Logout
menu-0-0-exec = i3-msg exit
menu-0-1 = Reboot
menu-0-1-exec = menu-open-1
menu-0-2 = Shutdown
menu-0-2-exec = menu-open-2
;menu-0-3 = Lock
;menu-0-3-foreground = ${colors.accent}
;menu-0-1-exec = lockscreen

