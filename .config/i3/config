#bindsym XF86AudioNext	exec --no-startup-id playerctl next
#bindsym XF86AudioPrev	exec --no-startup-id playerctl previous

# Status bar
exec_always --no-startup-id $HOME/.config/polybar/launch.sh
# exec_always --no-startup-id xfce4-panel --disable-wm-check

# Startup applications
exec_always --no-startup-id ~/.fehbg &
exec --no-startup-id compton -b
exec --no-startup-id light-locker
exec --no-startup-id libinput-gestures-setup start
exec --no-startup-id xfce4-power-manager
exec --no-startup-id redshift-gtk
exec --no-startup-id $USER_SCRIPTS/conky/start_conky.sh

#------------Class-specific behaviour---------------#

for_window [class="Nautilus"] floating enable, resize set 1300 px 800 px, move position center
for_window [class="Nm-connection-editor"] floating enable, resize set 500 px 500 px, move position center
for_window [class="Gsimplecal"] floating enable, move position 1655 781
for_window [class="Lxappearance"] floating enable, move position center


